{
  "name": "example-portal-desktop-app",
  "version": "1.0.0",
  "description": "Desktop wrapper for example.edu built with Electron.",
  "main": "main.js",
  "author": "Your Name",
  "license": "ISC",
  "scripts": {
    "predev": "node scripts/check-electron.js",
    "postinstall": "node scripts/check-electron.js",
    "dev": "electron .",
    "start": "electron .",
    "start:dev": "electron --inspect=5858 .",
    "dist": "electron-builder --win"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "peerDependencies": {
    "electron": "^28.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "appId": "edu.example.portal",
    "productName": "Example Portal App",
    "copyright": "Copyright Â© 2025 ${author}",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "deleteAppDataOnUninstall": true
    },
    "files": [
      "main.js",
      "preload.js",
      "ui-preload.js",
      "ui.html",
      "offline.html",
      "build/**",
      "README.md"
    ]
  }
}